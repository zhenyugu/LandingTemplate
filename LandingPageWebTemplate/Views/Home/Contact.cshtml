    Layout = "../Shared/_Layout.cshtml";
}
<!-- Header -->
<a name="about"></a>
<div class="">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2 class="page-header">联系方式</h2>
                <div class="row">                  
                    <div class="col-md-4">
                        <p>
                            苏州市相王玉器城 铺位号
                        </p>
                        <p>
                            <i class="fa fa-phone"></i>
                            <abbr title="Phone">电话</abbr>: (123) 456-7890
                        </p>
                        <p>
                            <i class="fa fa-envelope-o"></i>
                            <abbr title="Email">Email</abbr>: <a href="mailto:name@example.com">pinyuwu@example.com</a>
                        </p>
                        <p>
                            <i class="fa fa-clock-o"></i>
                            <abbr title="Hours">工作时间</abbr>: 每日 8:00- 17:00
                        </p>
                        <ul class="list-unstyled list-inline list-social-icons">
                            <li>
                                <a href="#"><i class="fa fa-facebook-square fa-2x"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-linkedin-square fa-2x"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-twitter-square fa-2x"></i></a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-google-plus-square fa-2x"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <h2 class="page-header">给我留言</h2>
                <div class="row">
                    <div class="col-md-8">
                        <form name="sentMessage" id="contactForm" novalidate="">
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>姓名:</label>
                                    <input type="text" class="form-control" id="name" required="" data-validation-required-message="Please enter your name.">
                                    <p class="help-block"></p>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>手机:</label>
                                    <input type="tel" class="form-control" id="phone" required="" data-validation-required-message="Please enter your phone number.">
                                    <div class="help-block"></div>
                                </div>
                            </div>
                            <div class="control-group form-group">
                                <div class="controls">
                                    <label>留言:</label>
                                    <textarea rows="10" cols="200" class="form-control" id="message" required="" data-validation-required-message="Please enter your message" maxlength="999" style="resize:none;max-width: 90% !important;"></textarea>
                                    <div class="help-block"></div>
                                </div>
                            </div>
                            <div id="success"></div>
                            <!-- For success/fail messages -->
                            <button type="submit" class="btn btn-primary">留言</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
</div>

