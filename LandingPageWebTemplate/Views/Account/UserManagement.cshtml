@section scripts
    {
        <script src="@Url.Content("~/Scripts/photoManager.js") " type="text/javascript" ></script>
        <script>
            
        </script>
    }
@model DataAccessLayer.Model.Production
<div class="container">
    <button class="btn btn-success" id="addImageBtn" data-toggle="modal" data-target="#addImageModal">添加作品</button>
    <!-- Modal -->
    <div class="modal fade" id="addImageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">请填写作品信息</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            @using (Html.BeginForm("AddImage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label class="col-xs-2 control-label">作品名称</label>
                                    <div class="col-xs-10">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "必填", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-xs-2 control-label">作品尺寸</label>
                                    <div class="col-xs-10">
                                        @Html.TextBoxFor(m => m.Size, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-xs-2 control-label">作品重量</label>
                                    <div class="col-xs-10">
                                        @Html.TextBoxFor(m => m.Weight, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-xs-2 control-label">证书编号</label>
                                    <div class="col-xs-10">
                                        @Html.TextBoxFor(m => m.SerialNumber, new { @class = "form-control", placeholder = "必填", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-xs-2 control-label">图片简介</label>
                                    <div class="col-xs-10">
                                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="upLoadimage" class="col-xs-2 control-label">上传图片</label>
                                    <div class="col-xs-10">
                                        <input type="file" id="upLoadimage" required />
                                    </div>
                                </div>
                                
                            }
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary">上传作品</button>
                </div>
            </div>
        </div>
    </div>
</div>


